            {
                "type": "string"
            },
            {
            "type": "array",
            "minItems": 2,
            "items": [
                { "type": "string" } 
            ],
            "contains": {
                "type": "object",
                "properties": {
                "transliteration": { "type": "string" },
                "transcription": { "type": "string" }
                },
